@model MasterCard.Web.ViewModel.CardViewModel;


<form  method="post">
    <div class="modal-body">
        <div class="mt-3">
            <label class="form-label">نام</label>
            <input type="text" class="form-control" asp-for="Title" />
        </div>

        <div class="mt-3">
            <label class="form-label">توضیحات</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>


        <div class="mt-3">
            <label class="form-label">لینک</label>
            <input type="text" class="form-control" asp-for="Link" />
        </div>


        <div class="mt-3">
            <label class="form-label">آیکن</label>
            <input type="text" class="form-control" asp-for="Icon" />
        </div>

        <div class="mt-3">
            <label class="form-label">دسته بندی</label>
            <input type="text" class="form-control" />
        </div>

        <div class="mt-3">
            <label class="form-check-label" for="IsDeleted">حذف شده</label>
            <input type="checkbox" class="form-check-input" id="IsDeleted" asp-for="IsDeleted" />
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">ایجاد</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">بستن</button>
    </div>
</form>
