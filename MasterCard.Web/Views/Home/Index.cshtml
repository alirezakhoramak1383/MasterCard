@using MasterCard.Web.ViewModel

@model IEnumerable<CardViewModel>

@{
    ViewData["Title"] = "Home Page";
}

 @foreach (var item in Model)
{
    <div class="col-sm-6 col-lg-4">
        <div class="panel">
            <div class="panel-body">
                <div class="media-main">
                    <a class="pull-left" href="@item.Link">
                        <img class="thumb-lg img-circle" src="@item.Icon" alt="">
                    </a>
                    <div class="info">
                        <h4>@item.Title</h4>
                        <p class="text-muted">@item.Description</p>
                    </div>
                </div>
                <div class="clearfix"></div>
                <hr />
                <a href="@item.Link" class="text-warning">@item.Link</a>
            </div>
        </div>
    </div>
    @* https://localhost:7143/images/SiteIcons/electronic.png *@
}
